@model List<ShopItem>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-white py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2>ShopItem</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-controller="Shop" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New
                    </a>
                    <a asp-controller="Shop" asp-action="Cart" class="btn btn-info ms-2">
                        <i class="bi bi-cart"></i> View Cart
                    </a>ф
                </div>
            </div>

            <h1>ShopItem List</h1>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ShopItem Name</th>
                        <th>ShopItem Order</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.ShopItemId))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.ShopItemId</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <a asp-controller="ShopItem" asp-action="Edit" asp-route-id="@obj.ShopItemId" class="btn btn-primary me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <form asp-controller="Shop" asp-action="Details" method="post">
                                        <input type="hidden" name="id" value="@obj.ShopItemId" />
                                        <button type="submit" class="btn btn-success">
                                            <i class="bi bi-cart-plus"></i> Add to Cart
                                        </button>
                                    </form>
                                    <a asp-controller="ShopItem" asp-action="Delete" asp-route-id="@obj.ShopItemId" class="btn btn-danger ms-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                    <a asp-action="Details" asp-route-shopitemId="@obj.ShopItemId"
                                       class="btn btn-primary bg-gradient border-0 form-control">
                                        Details
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>